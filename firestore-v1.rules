rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Transactions Collection ---
    // Users can only interact with their own transactions.
    match /transactions/{transactionId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- Chart of Accounts Collection ---
    // Users can manage their own chart of accounts.
    match /chartOfAccounts/{accountId} {
      allow read: if request.auth != null && (request.query.where.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- All Transactions Ledger ---
    // The ledger is derived from other documents, so we need to ensure users can only access their own entries.
    match /all_transactions_ledger/{ledgerId} {
      allow read: if request.auth != null && (request.query.where.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      // Create, update, delete should be handled server-side or through trusted client logic that ensures data integrity.
      // For this app, client-side posting is allowed but secured.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- Historical Reference Data ---
    // Users can manage their own historical data for AI categorization.
    match /historicalReferenceData/{refId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Sales Invoices ---
    // Users can manage their own sales invoices.
    match /sales_invoices/{invoiceId} {
      // Corrected read rule to allow both single doc reads and collection queries
      allow read: if request.auth != null && (request.query.where.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Purchase Bills ---
    match /purchase_bills/{billId} {
      allow read: if request.auth != null && (request.query.where.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- Contacts ---
    match /contacts/{contactId} {
      allow read: if request.auth != null && (request.query.where.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- Journal Entry Lines ---
    match /journal_entry_lines/{lineId} {
      allow read: if request.auth != null && (request.query.where.userId == request.auth.uid || resource.data.userId == request.auth.uid);
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- User Display Preferences ---
    // Users can manage their own display preferences.
    match /userDisplayPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
